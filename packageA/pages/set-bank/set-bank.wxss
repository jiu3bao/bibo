.contain {
  background: #f5f5f5;
}
.contain>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height:100rpx;
  padding:0 50rpx;
  font-size:25rpx;
  background: #fff;
  border-top:1rpx solid #eee;
}
input {
  text-align: right
}
.contain .button {
  width:90%;
  padding:0;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  color:#fff;
  text-align: center;
  line-height: 86rpx;
  margin:0 auto;
  margin-top:80rpx;
  border-radius: 5rpx;
  border:0;
  display: block;
  height:86rpx
}