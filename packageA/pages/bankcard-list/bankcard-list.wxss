/* pages/bankcard-list/backcard-list.wxss */
page {
  background:#f5f5f5;
}
.btn {
  width:90%;
  line-height:86rpx;
  margin:20rpx auto;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  color:#fff;
  border-radius: 5rpx;
  font-size:25rpx;
  text-align: center;
}
.card {
  width:90%;
  margin:20rpx auto;
  color:#313131;
  padding:50rpx 0 50rpx 50rpx;
  height:300rpx;
  box-sizing: border-box;
  position: relative
}
.card image {
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0
}
.ye {
  font-size:29rpx;
  position: relative
}
.mo {
  font-size:33rpx;
  border-bottom:1rpx solid #313131;
  display: flex;
  align-items: flex-end;
  width:480rpx;
  line-height:90rpx;
  margin: 25rpx 0 20rpx 0;
  position: relative
}
.tx {
  font-size:25rpx;
  position: relative
}