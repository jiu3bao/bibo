<!--accompany/components/tabbar.wxml-->
<view class='tabbar'>
  <view bindtap="nav" data-type='{{1}}'>
    <image src='/img/home_1.png' wx:if='{{nowtab!==1}}'></image>
    <image src='/img/home_2.png' wx:else></image>
    <view class='{{nowtab===1?"green":""}}'>我的会员</view>
  </view>
  <view bindtap="nav" data-type='{{2}}'>
    <image src='/img/dingdan_1.png'  wx:if='{{nowtab!==2}}'></image>
    <image src='/img/dingdan_2.png' wx:else></image>
    <view class='{{nowtab===2?"green":""}}'>设计订单</view>
  </view>
  <view bindtap="nav" data-type='{{3}}'>
    <image src='/img/geren_1.png'  wx:if='{{nowtab!==3}}'></image>
    <image src='/img/geren_2.png' wx:else></image>
    <view class='{{nowtab===3?"green":""}}'>个人中心</view>
  </view>
</view>