<!--accompany/pages/set-design/set-design.wxml-->
<infohead info='{{info}}'></infohead>
<view class='title j-sb'>
  <view class='t-l'>
    <image src='/img/chaxun.png'></image>历史记录
  </view>
  <image src='/img/xiala.png' class='xiala'></image>
</view>
 <view class='f btop'>
    <view>年龄</view>
    <view>{{casei.age}}</view>
  </view>
  <view class='photos'>
  </view>
  <view class='phos'></view>
  <view class='info'>
    <view class='f'>
      <view>想咨询项目</view>
      <view>{{casei.item_name}}</view>
    </view>
    <view class='f'>
      <view>个人诉求</view>
      <view>{{casei.demand}}</view>
    </view>
    <view class='f'>
      <view>是否做过该项目</view>
      <view>{{casei.is_done===0?'否':'是'}}</view>
    </view>
    <view class='ta'>
      <textarea placeholder="请输入该项目的次数、所在医院、价格等" value="{{casei.done_item_des}}"></textarea>
    </view>
    <view class='f'>
      <view>病史、过敏史</view>
      <view>{{casei.his}}</view>
    </view>
  </view>
<view class='title'>
  <view class='t-l'>
    <image src='/img/chaxun.png'></image>设计方案
  </view>
</view>
<view class='zx_program'>
  <view class='"item" {{activeType ==item?"active":""}}' 
  wx:for='{{program_list}}'
  bindtap="checkitem"
  data-item='{{item}}'>{{item}}</view>
</view>
<view class='list'>
  <view wx:for='{{subject_list}}' class='{{item.ischeck?"ac":""}}' bindtap="choseitem" data-index='{{index}}'>{{item.item}}</view>
</view>
<view class='f'>
  <view>项目一</view>
  <view>耳软骨鼻综合</view>
</view>
<view class='f'>
  <view>项目二</view>
  <view>耳软骨鼻综合</view>
</view>
<view class='f'>
  <view>其他项目</view>
  <input placeholder="手动输入"></input>
</view>
<view class='ip'>
  <view class='ipi'>
    <view>医院收费 </view>
    <input placeholder="手动输入"></input>
  </view>
  <view class='ipi'>
    <view>补贴金额  </view>
    <input placeholder="手动输入"></input>
  </view>
   <view class='ipi'>
    <view>实际花费  </view>
    <input placeholder="手动输入"></input>
  </view>
</view>
<view class='title'>
  <view class='t-l'>
    <image src='/img/chaxun.png'></image>术后效果
  </view>
</view>
<view class='upp'>
  <view class='add-btn'>+</view>
</view>
<view class='f'>
  <view>手术恢复期</view>
  <view>3个月</view>
</view>
<view class='emit-btn'>提交给用户</view>