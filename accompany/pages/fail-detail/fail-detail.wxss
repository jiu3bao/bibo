/* pages/fail-records/fail-records.wxss */
.item {
  background:#fff;
  margin-bottom:20rpx;
}
.info {
  border-bottom: 1rpx solid #e6e6e6;
  padding-bottom:30rpx;
}
.info >view{
  display:flex;
  padding:30rpx 0 0rpx 50rpx;
}
.info >view view {
  font-size:33rpx;
  margin-right:60rpx;
}
.info >view view+view {
  color:#2373ff
}
.info .red {
  color:#ff3131
}
.convice {
  padding:10rpx 50rpx;
  font-size:33rpx;
  color:#313131;
}
.convice image {
  width:80rpx;
  height:80rpx;
  margin-top:10rpx;
}
.blue {
  color:#2373ff;
}
.tologin {
  width:482rpx;
  line-height:70rpx;
  margin: 50rpx auto 0 auto;
  color:#fff;
  text-align: center;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  border-radius: 30rpx;
}
input {
  border:1rpx solid #e6e6e6;
  border-radius: 5rpx;
}
.fff {
  display: flex
}