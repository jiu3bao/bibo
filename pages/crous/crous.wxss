/* pages/crous/crous.wxss */
page {
  background:#f7f7f7;
}
.title {
  display: flex;
  width:100%;
  height:33rpx;
  padding-left:30rpx;
  color:#434343;
  font-size:25rpx;
  align-items: flex-end;
  margin: 24rpx 0 17rpx 0;
}
.title image {
  width:7rpx;
  height:33rpx;
  margin-right:10rpx;
}
.title text {
  color:#FF504C;
  font-size:23rpx;
  margin-left:17rpx;
}
.cours-box {
  width:100%;
  box-sizing: border-box;
  padding: 0 25rpx;
}
.item {
  width:100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.item image {
  width:100%;
  height:290rpx;
  border-radius:10px 10px 0px 0px;
}
.bottom {
  box-shadow:0px 5px 16px 0px rgba(141,141,141,0.29);
  border-radius:0px 0px 10px 10px;
}

.name {
  color:#1B1B1B;
  font-size:30rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 42rpx 0 28rpx;
  margin-top:20rpx;
}
.name text {
  color:#898989;
  font-size:27rpx;
}
.num {
  color:#AAAAAA;
  font-size:25rpx;
  margin-top:17rpx;
  padding-left:28rpx;
}
.price {
  display: flex;
  align-items: flex-end;
  padding-left:32rpx;
  padding-bottom: 30rpx;
}
.real {
  color:#EC6941;
  font-size:58rpx;
  margin-right:18rpx;
}
.real text {
  font-size:31rpx;
}
.fake {
  color:#A0A0A0;
  text-decoration:line-through;
  font-size:31rpx;
}