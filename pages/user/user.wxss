/* pages/user/user.wxss */
.contain {
  height:100%;
  box-sizing: border-box;
  background:#f5f5f5
}
.base-info {
  height:220rpx;
  display: flex;
  align-items: center;
  margin-bottom:30rpx;
  margin-top:20rpx;
  padding:0 43rpx;
  background: #fff;
  position: relative;
}

.head {
  width:124rpx;
  height: 124rpx;
  border-radius: 50%;
  margin-right:26rpx;
}
.info {
  
}
.name {
  font-size:33rpx;
  color:#1b1b1b;
  margin-bottom:10rpx;
}
.id,.phone {
  color:#707070;
  font-size:25rpx;
}
.phone{
  margin-bottom:10rpx;
}
.info image {
  width:50rpx;
  height:50rpx;
}
.type {
  display: flex;
  align-items: center;
}
.type>view {
  margin-right:40rpx;
  display:flex;
}
.type image {
  width: 30rpx;
  height:30rpx;
  margin-right:8rpx;
}
.type view {
  color:#1b1b1b;
  font-size:25rpx;
  align-items: center
}
.money-info {

}
.total {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height:114rpx;
  border-bottom:1px solid #ccc;
  background:#fff;
  font-size:29rpx;
  color:#1b1b1b;

}
.total view+view {
  color:#64c957;
  font-size:38rpx;
}
.detail {
  display: flex;
  align-items: center;
  background:#fff;
  height:180rpx;
  margin-bottom:30rpx;
}
.detail view {
  width:33.33%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.detail .line {
  width:2rpx;
  height:52rpx;
  background:#dedede;
  flex-shrink: 0
}
.detail text {
  font-size:25rpx;
  color:#1b1b1b;
}
.detail .blue {
  color:#586cff;
  font-size:38rpx;
}
.detail .red {
  color:#eb6877;
  font-size:38rpx;
}
.detail .purple {
  color:#556fb5;
  font-size:38rpx;
}
.function-list {
  display: flex;
  flex-wrap: wrap;
  background:#fcf9f8;
}
.function-item {
  width:25%;
  height:146rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom:1px solid #dcdcdc;
  justify-content: center;
  font-size:21rpx;
  color:#707070;
}
.function-item image {
  width:60rpx;
  height:60rpx;
  margin-bottom:18rpx;
}
.function-item:nth-child(n+5) {
  border-bottom:none
}
.tologin {
  width:482rpx;
  line-height:70rpx;
  margin: 50rpx auto 0 auto;
  color:#fff;
  text-align: center;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  border-radius: 30rpx;
}
.position {
  position: absolute;
  right:50rpx;
  height:50%;
  color:#3cb5fe;
  font-size:24rpx;
}
.shadow {
  position: fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background: rgba(0,0,0,.5);
  z-index: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}
.auth {
  width:70%;
  padding:30rpx;
  position: absolute;
  background: #fff;
  text-align: center;
}
.auth button {
  width:60%;
  background: #3cb5fe;
  color:#fff;
  margin-top:30rpx;
}