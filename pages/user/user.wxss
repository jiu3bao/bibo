/* pages/user/user.wxss */
.contain {
  height:100%;
  box-sizing: border-box
}
.base-info {
  height:300rpx;
  display: flex;
  align-items: center;
  margin-bottom:30rpx
}
.head {
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
  margin-right:40rpx
}
.info {

}
.info image {
  width:50rpx;
  height:50rpx;
}
.money-info {

}
.total {
  display: flex;
  justify-content: space-between;
  height:200rpx;
  border-bottom:1px solid #333
}
.detail {
  display: flex;
  align-items: center
}
.detail view {
  width:33.33%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.function-list {
  display: flex;
  flex-wrap: wrap;
}
.function-item {
  width:25%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom:1px solid #333
}
.function-item image {
  width:50rpx;
  height:50rpx
}
.function-item:nth-child(n+5) {
  border-bottom:none
}