<!--pages/user/user.wxml-->
<nav-bar navbar-data='{{nvabarData}}'></nav-bar>

<view class='contain' style='padding-top:{{navbarHeight}}px'>
  <view class='base-info' bindtap="toset">
    <image src='{{baseInfo.head&&baseInfo.head.length>0?src_url+baseInfo.head:baseInfo.default_head}}' class='head' binderror="errImg"></image>
    <view class='info'>
      <view class='name'>{{baseInfo.name}}</view>
      <view class='id'>会员编号{{baseInfo.id}}</view>
      <view class='phone'>{{baseInfo.mobile}}</view>
      <view class='type'>
        <view>
          <image src='../../img/vip@2x.png' wx:if='{{baseInfo.is_member===1}}'></image>
          <view wx:if='{{baseInfo.is_member===0}}'>普通用户</view>
          <view wx:if='{{baseInfo.is_member===1}}'>{{baseInfo.notover?'VIP会员':'会员已过期'}}</view>
        </view>
        <view wx:if='{{baseInfo.type===2||baseInfo.type===3}}'>
          <image src='../../img/hehuoren@2x.png'></image>
          <view wx:if='{{baseInfo.type===2}}'>普通合伙人</view>
          <view wx:if='{{baseInfo.type===3}}'>高级合伙人</view>
        </view>
      </view>
    </view>
  </view>
  <view class='money-info'>
    <view class='total'>
      <view>累计收益</view>
      <view>￥{{moneyInfo.total}}</view>
    </view>
    
    <view class='detail'>
      <view>
        <text class='blue'>￥{{moneyInfo.zs}}</text>
        <text>推广收益</text>
      </view>
      <view class='line'></view>
      <view>
        <text class='red'>￥{{moneyInfo.fx}}</text>
        <text>会员消费收益</text>
      </view>
      <view class='line'></view>
      <view>
        <text class='purple'>￥{{moneyInfo.xf}}</text>
        <text>消费返现</text>
      </view>
    </view>
  </view>
  <view class='function-list' wx:if='{{baseInfo.is_member!==0}}'>
    <view wx:for='{{fnList}}' wx:key='item.name' 
      class='function-item' 
      bindtap='redirect' 
      data-url='{{item.redirect}}'
      wx:if='{{item.auth!==0||baseInfo.type>1}}'>
      <image src='{{item.img}}'
      ></image>
      <text>{{item.name}}</text>
    </view>
  </view>
  <view class='tologin' bindtap='tologin'>
    切换账号
  </view>
</view>
