<!--pages/member-detail/member-detail.wxml-->
<nav-bar navbar-data='{{nvabarData}}'></nav-bar>

<view class='contain' style='padding-top:{{navbarHeight}}px'>
  <view class='baseinfo'>
    <image class='head' src='{{img_root+info.head}}'></image>
    <view>
      <view class='name'>{{info.name}}<text>会员编号({{info.id}})</text></view>
      <view class='yellow'>收益￥{{money}}</view>
      <view class='type'>
        <image src='../../img/vip@2x.png'></image>
        vip会员
      </view>
    </view>
  </view>
  <view class='item' wx:for='{{list}}' wx:key='{{item.id}}' 
    data-id='{{item.id}}'>
    <view class='info'>
      <view>
        <view>日期</view>
        <view>{{item.time}}</view>
      </view>
      <view>
        <view>消费医院</view>
        <view>{{item.hospital}}</view>
      </view>
      <view>
        <view>项目</view>
        <view>{{item.item+'-'+item.item_type}}</view>
      </view>
      
      <view>
        <view>消费总额</view>
        <view>￥{{item.money}}</view>
      </view>
      <view>
        <view>我的奖励</view>
        <view>￥{{item.p_return_money}}</view>
      </view>
    </view>
  </view> 
</view>