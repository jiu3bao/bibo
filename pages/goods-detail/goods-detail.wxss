/* pages/goods-detail/goods-detail.wxss */
.contain {
  padding-bottom:210rpx
}
.contain image {
  width:100% !important;
}
.bottom {
  position: fixed;
  bottom:0;
  width:100%;
  display:flex;
  height:100rpx;
  align-items: center;
  justify-content: space-between;
  padding-left:50rpx;
  box-sizing: border-box;
  border-top:1rpx solid #dedede;
  background: #fff
}
.bottom view {
  color:#313131;
  font-size:25rpx;
}
.bottom text {
  font-size:29rpx
}
.bottom .button {
  width:220rpx;
  height:100rpx;
  color:#fff;
  background:linear-gradient(to right, #69dec1 , #44cbed);
  font-size:29rpx;
  text-align: center;
  line-height: 100rpx;
}
.tip {
  width:90%;
  margin:40rpx auto;
  padding:30rpx 50rpx;
  font-size:25rpx;
  color:#313131;
  background:rgba(0,125,255,0.1);
  border: 1rpx solid #2c7bdf;
  border-radius: 5rpx;
  box-sizing: border-box;
  line-height:40rpx;
}
.tip>view {
  display: flex;
}
.blue {
  color:#2c7bdf;
}
.content {
  margin-top:20rpx;
}
.content .name {
  font-size:28rpx;
  font-weight: 600;
}
.content .dot {
  display: inline-block;
  width:8rpx;
  height:8rpx;
  border-radius: 50%;
  background: #2c7bdf;
  flex-grow: 0;
  padding:0;
  margin-right:6rpx;
  flex-shrink: 0;
}
.content>view {
  display: flex;
  align-items: center;
  padding:0 60rpx;
  font-size:24rpx;
  color:#313131;
  margin-bottom:10rpx;
  line-height: 40rpx;
}
.model {
  position: fixed;
  width:100%;
  height: 100%;
  top: 0;
  left: 0;
  background:rgba(0,0,0,.3);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.box {
  width:80%;
  height:800rpx;
}
.con {
  width:100%;
  height:720rpx;
  overflow-y: scroll;
  background: #fff;
  border-radius: 5rpx;
  font-size:24rpx;
  padding:30rpx 20rpx;
  box-sizing: border-box;
}
.con text {
  font-weight: 600;
  text-decoration: underline;
}
.con view {
  padding-left:10rpx;
}
.con .tt {
  text-align: center;
}
.read-btn {
  display: flex;
  padding:0;
  width:100%;
  height:80rpx;
  /* position: fixed;
  left:0;
  bottom: 0; */
  background: #fff;
}
.read-btn view {
  width:50%;
  display: flex;
  height:80rpx;
  align-items: center;
  justify-content: center;
  color:#999;
  font-size: 26rpx;
  padding:0;
  border-right:1rpx solid #d5d5d5;
  border-top:1rpx solid #d5d5d5;
}
.read-btn view+view {
  background:#3cb5fe;
  color:#fff;
}
.aa {
  display: flex; 
  align-items: center;
  height:100rpx;
  border-top :1rpx solid #d5d5d5;
  /* border-bottom:1rpx solid #d5d5d5; */
  background: #f5f5f5;
  position: fixed;
  bottom:100rpx;
  left:0;
  width:100%;
  padding-left:50rpx;
  box-sizing: border-box;
}
.gou {
  width:30rpx;
  height:30rpx;
  border-radius: 5rpx;
  border:1rpx solid #d5d5d5;
  color:#fff;
  text-align: center;
  line-height: 30rpx;
}
.bl {
  background: #3cb5fe;
}
.bb {
  font-size:24rpx;
  font-weight:600;
  text-decoration: underline;
  color:#3cb5fe;
}
.bold {
  font-weight: 600;
  margin-right:20rpx;
  flex-shrink: 0;
}