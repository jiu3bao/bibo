/* pages/goods-detail/goods-detail.wxss */
.contain {
  padding-bottom:110rpx
}
.contain image {
  width:100% !important;
}
.bottom {
  position: fixed;
  bottom:0;
  width:100%;
  display:flex;
  height:100rpx;
  align-items: center;
  justify-content: space-between;
  padding-left:50rpx;
  box-sizing: border-box;
  border-top:1rpx solid #dedede;
  background: #fff
}
.bottom view {
  color:#313131;
  font-size:25rpx;
}
.bottom text {
  font-size:29rpx
}
.bottom .button {
  width:220rpx;
  height:100rpx;
  color:#fff;
  background:linear-gradient(to right, #69dec1 , #44cbed);
  font-size:29rpx;
  text-align: center;
  line-height: 100rpx;
}
.tip {
  width:90%;
  margin:40rpx auto;
  padding:30rpx 50rpx;
  font-size:25rpx;
  color:#313131;
  background:rgba(0,125,255,0.1);
  border: 1rpx solid #2c7bdf;
  border-radius: 5rpx;
  box-sizing: border-box;
}
.blue {
  color:#2c7bdf;
}
.content {
  margin-top:20rpx;
}
.content .name {
  font-size:28rpx;
  font-weight: 600;
}
.content .dot {
  width:10rpx;
  height:10rpx;
  border-radius: 50%;
  background: #2c7bdf;
  flex-grow: 0;
  padding:0;
  margin-right:10rpx;
}
.content>view {
  display: flex;
  align-items: center;
  padding:0 60rpx;
  font-size:24rpx;
  color:#313131;
  margin-bottom:10rpx;
}