/* pages/goods-detail/goods-detail.wxss */
.contain {
  padding-bottom:110rpx
}
.contain image {
  width:100% !important;
}
.bottom {
  position: fixed;
  bottom:0;
  width:100%;
  display:flex;
  height:100rpx;
  align-items: center;
  justify-content: space-between;
  padding-left:50rpx;
  box-sizing: border-box;
  border-top:1rpx solid #dedede;
  background: #fff
}
.bottom view {
  color:#313131;
  font-size:25rpx;
}
.bottom text {
  font-size:29rpx
}
.bottom .button {
  width:220rpx;
  height:100rpx;
  color:#fff;
  background:linear-gradient(to right, #69dec1 , #44cbed);
  font-size:29rpx;
  text-align: center;
  line-height: 100rpx;
}