/* pages/staff-page/staff-page.wxss */
page {
  font-size:26rpx;
  background: #f5f5f5
}
.flex {
  display: flex;
  padding:0 30rpx;
  border-top:1rpx solid #e6e6e6;
  height:80rpx;
  align-items: center;
  background: #fff;
}
.check {
  padding:0;
  color:#666;
  font-size:24rpx;
}
.between {
  justify-content: space-between
}
input {
  border:1rpx solid #dfdfdf;
  width:200rpx;
  height:50rpx;
  margin-right:20rpx;
  text-align: center;
  border-radius: 5rpx;
}
.submit {
  width:80%;
  line-height:60rpx;
  margin:40rpx auto;
  color:#fff;
  text-align: center;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  border-radius: 30rpx;
}
.submit image {
  width:100%;
  height:100%
}
.blue {
  color:#229aff
}
.red {
  color:#ff3131;
}
.icon {
  width:40rpx;
  height:40rpx;
  margin-left:10rpx;
}
.pic {
  width:120rpx;
  height:120rpx;
  margin-top:10rpx;
}
.convers-pic {
  border-top:1rpx solid #e6e6e6;
  padding:10rpx 30rpx;
  background: #fff;

}
.head_pic {
  width:50rpx;
  height:50rpx;
}
.info {
  display: flex;
  align-items: center;
  padding-left:50rpx;
  height:160rpx;
}