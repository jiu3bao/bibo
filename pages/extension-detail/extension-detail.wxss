/* pages/extension-detail/extension-detail.wxss */
.contain {
  background:#f5f5f5;
}
.zj {
  border-top:1rpx solid #e6e6e6;
  padding:20rpx 50rpx;
  background: #fff;
  font-size:26rpx;
}
.pic {
  width:112rpx;
  height:112rpx;
  margin-top:10rpx;
}
.bottom {
  position: fixed;
  bottom:0;
  width:100%;
  border-top:1rpx solid #e6e6e6;
}
.save {
  display: flex;
  /* margin-bottom:20rpx; */
}
.save view {
  width:50%;
  text-align: center;
  line-height: 80rpx;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  color:#fff;
  font-size:26rpx;
}
.title {
  font-size:33rpx;
  color:#000;
  padding:20rpx 0 20rpx 50rpx;
}
.time {
  font-size:21rpx;
  color:#898989;
  padding-left:50rpx;
  margin-bottom:20rpx;
}
.content {
  background: #fff;
  padding-bottom:280rpx;
}
.content video,.content image {
  width:100% !important
}