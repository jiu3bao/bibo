<!--pages/member-detail/member-detail.wxml-->
<nav-bar navbar-data='{{nvabarData}}'></nav-bar>

<view class='contain' style='padding-top:{{navbarHeight}}px'>
  <view class='tab'>
    <view class='{{type===0?"ac":""}}' bindtap="changetype" data-type='{{0}}'>
      消费详情
    </view>
    <view class='{{type===1?"ac":""}}' bindtap="changetype" data-type='{{1}}'>
      平台排队
    </view>
  </view>
   <swiper class='swiper' bindchange='slide' current='{{type}}'>
    <swiper-item class='swiper-item'>
      <view class='item' wx:for='{{payList.notget}}' wx:key='{{item.id}}' 
        data-id='{{item.id}}'>
         
      </view>   
      <view>历史</view>
      <view class='item' wx:for='{{payList.geted}}' wx:key='{{item.id}}'>

      </view>
    </swiper-item>
    <swiper-item class='swiper-item'>
      <view class='total'>
        <view>当前排名<text>{{rankinfo.index!==0?rankinfo.index:'无'}}</text>号</view>
        <view>累计金额<text>{{rankinfo.pool}}</text>元</view>
      </view>
      <view class='head'>
        <view>排名</view>
        <view>姓名</view>
        <view>返还金额</view>
      </view>
      <view class='rank-item' wx:for='{{rankList}}' wx:key='{{item.id}}'>
        <view>
          {{index+1}}
        </view>
        <view>
          {{item.name}}
        </view>
        <view>
          {{item.p_return_money}}元
        </view>
      </view>
    </swiper-item>
  </swiper>
</view>