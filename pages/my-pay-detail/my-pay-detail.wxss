/* pages/member-manage/member-manage.wxss */
.contain {
  box-sizing: border-box;
  background: #f5f5f5;
}
.tab {
  display:flex;
  align-items: center;
  border-top:1rpx solid #d2d2d2;
  border-bottom:1rpx solid #d2d2d2;
  background: #fff;
}

.tab view {
  width:50%;
  text-align: center;
  line-height:68rpx;
  font-size:25rpx;
  border-right:1rpx solid #d2d2d2;
}
.tab view:last-child {
  border-right:0
}
.tab .ac {
  background:blue;
  color:#fff;
}
.head {
  display: flex;
  justify-content: space-between
}
.swiper {
  height:100%;
}
.swiper-item {
  height:100%   
}
.tip {
  padding:10rpx 30rpx;
  font-size:25rpx;
  color:#1b1b1b;
  display: flex;
  align-items: center
}
.dot {
  width:10rpx;
  height:10rpx;
  background: blue;
  margin-right:10rpx;
  border-radius: 50%
}
.total {
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:80rpx;
  background: #e4f4fb;
  font-size:25rpx;
  color:#1b1b1b;
}
.total view {
  width:50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:28rpx;
  color:#1b1b1b;
}
.rk {
  color:#ec6941;
  font-size:33rpx;
  margin:0 10rpx 0 20rpx
}
.rm {
  color:#586cff;
  font-size:33rpx;
  margin-left: 20rpx
}
.head {
  display:flex;
  align-items: center;
  height:68rpx;
  background:#fff371;
  border:1rpx solid #e6e6e6;
  border-left:0;
  border-right:0;
  color:#1b1b1b;
  font-size:29rpx
}
.head>view,.rank-item>view {
  width:20%;
  text-align: center;
}
.head>view+view,.rank-item>view+view {
  width:60%;
  text-align: left;
}
.head>view+view+view,.rank-item>view+view+view {
  width:20%;
  
}
.rank-item {
  display:flex;
  align-items: center;
  height:100rpx;
  background:#fff;
  border-bottom:1rpx solid #e6e6e6;
}
.rank-item>view+view {
  font-size:25rpx;
  color:#707070;
}
.rank-item>view+view+view {
  color:#2373ff;
}
.me {
  background:green;
  font-weight:600;
  color:#000
}
.me>view+view {
  color:#000
}
.me>view+view+view {
  color:#000
}
.item {
  background:#fff;
  margin-bottom:20rpx;
}
.info {
  border-bottom: 1rpx solid #e6e6e6;
  padding-bottom:30rpx;
}
.info >view{
  display:flex;
  padding:30rpx 0 0rpx 50rpx;
}
.info >view view {
  font-size:33rpx;
  color:#313131;
  margin-right:60rpx;
}
.info >view view+view {
  color:#2373ff
}
.info .red {
  color:#ff3131
}
.convice {
  padding:10rpx 50rpx;
  font-size:33rpx;
  color:#313131;
}
.convice image {
  width:80rpx;
  height:80rpx;
  margin-top:10rpx;
}