/* pages/wallet/wallet.wxss */
.contain {
  height:100%;
  box-sizing: border-box;
  background:#f5f5f5;
}
.money {
  width:90%;
  margin:20rpx auto;
  color:#fff;
  padding:50rpx 0 50rpx 50rpx;
  height:300rpx;
  box-sizing: border-box;
  position: relative;
}
.money image {
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0
}
.ye {
  font-size:29rpx;
  position: relative
}
.mo {
  font-size:33rpx;
  border-bottom:1rpx solid #fff;
  display: flex;
  align-items: flex-end;
  width:480rpx;
  height:90rpx;
  margin: 25rpx 0 20rpx 0;
  position: relative
}
.mo input {
  font-size:83rpx;
  height:90rpx;
}
.tx {
  font-size:25rpx;
  position: relative
}
.btn {
  width:482rpx;
  line-height:70rpx;
  margin: 0 auto;
  color:#fff;
  text-align: center;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  border-radius: 30rpx;
}
.btn image {
  width:100%;
  height:100%
}
.add-card {
  width:90%;
  margin:20rpx auto;
  text-align: center;
  line-height:100rpx;
  border:1rpx solid #d3d3d3;
  border-radius: 5rpx;
  font-size:28rpx;
  color:#d2d2d2;
  background: #fff
}
.add-card text+text{
  font-size:29rpx;
  color:#1b1b1b;
  margin-left:30rpx;
}
.tip {
  padding:10rpx 30rpx;
  font-size:25rpx;
  color:#1b1b1b;
  display: flex;
  align-items: center
}
.dot {
  width:10rpx;
  height:10rpx;
  background: #229aff;
  margin-right:10rpx;
  border-radius: 50%
}
.box {
  box-sizing: border-box;
  background:#fff;
}
.type {
  display:flex;
  align-items: center;
  border:1rpx solid #d2d2d2;
}
.type view {
  width:33.33%;
  text-align: center;
  line-height:68rpx;
  font-size:25rpx;
  border-right:1rpx solid #d2d2d2;
}
.type view:last-child {
  border-right:0
}
.type .active {
  background:#229aff;
  color:#fff;
}
.total {
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:82rpx;
  background: #e4f4fb;
  padding:0 50rpx;
  font-size:25rpx;
  color:#1b1b1b;
}
.total view+view {
  color:#eb6877;
  font-size:29rpx;
}
.item {
  display:flex;
  justify-content: space-between;
  height:82rpx;
  align-items: center;
  padding:0 30rpx;
  color:#313131;
  font-size:25rpx;
  border-bottom:1rpx solid #e6e6e6;
}
.grey {
  color:#707070
}
.blue {
  color:#2373ff;
}
