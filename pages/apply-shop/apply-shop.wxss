/* pages/apply-shop/apply-shop.wxss */
page {
  background: #f7f7f7;
  padding-top:50rpx;
}
.main_pic {
  max-height:200rpx;
}
.flex {
  display: flex;
  padding: 34rpx 44rpx;
  border-bottom:1px solid #E5E5E5;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}
.l {
  color:#313131;
  font-size:25rpx;
  flex-shrink: 0;
}
input {
  text-align: right;
  font-size:25rpx;
  color:#535353
}
.picbtn {
  font-size: 25rpx;
  color:rgb(103, 145, 235);
  text-decoration: underline;
}
.sub {
  width:343rpx;
  line-height:52rpx;
  margin:50rpx 0;
  background:linear-gradient(-7deg,rgba(68,179,154,1),rgba(88,204,129,1));
  border-radius:26px;
  font-size:23rpx;
  color:rgba(255,255,255,1);
  
}
.cont_pic {
  display: flex;
  align-items: center;
  background: #fff;
  flex-wrap: wrap;
  width: 100%;
}
.picitem {
  position: relative;
  margin: 0 30rpx 30rpx 0;
}
.float {
  position: absolute;
  bottom: 0;
  width: 100%;
  height:70rpx;
  text-align: center;
  background: rgba(0,0,0,.6);
}

.cont_pic image {
  width:200rpx;
  height:200rpx;
}
.float image {
  width:60rpx;
  height:60rpx;
}
.mask {
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background: rgba(0,0,0,.6);
  z-index: 3;
}
.b {
  margin:100rpx auto;
  padding:46rpx;
  color:#434343;
  font-size:30rpx;
  background: #fff;
  width:60%;
  border-radius: 10rpx;
}
.bgroup {
  display: flex;
  margin-top:50rpx;
  justify-content: space-around;
}