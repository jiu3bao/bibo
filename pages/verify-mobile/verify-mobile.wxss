/* pages/verify-mobile/verify-mobile.wxss */
page {
  background:#f5f5f5;
}
.send {
  height:120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:24rpx;
  padding:0 30rpx;
}
text {
  color:#2373ff;
  text-decoration: underline;
}
.send-btn {
  width:100rpx;
  line-height:40rpx;
  border:1rpx solid #d5d5d5;
  background: #fff;
  color:#707070;
  text-align: center;
  border-radius: 5rpx;
}
.input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height:100rpx;
  padding:0 50rpx;
  font-size:25rpx;
  background: #fff;
  border-top:1rpx solid #d5d5d5;
  border-bottom:1rpx solid #d5d5d5;
}
input {
  text-align: right
}
.btn {
  width:90%;
  padding:0;
  background:linear-gradient(to right, #3cb5fe , #42d4fd);
  color:#fff;
  text-align: center;
  line-height: 86rpx;
  margin:0 auto;
  margin-top:80rpx;
  border-radius: 5rpx;
  border:0;
  display: block;
  height:86rpx
}