/* components/auth/auth.wxss */
.shadow {
  position: fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background: rgba(0,0,0,.5);
  z-index: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}
.auth {
  /* width:70%; */
  
  position: absolute;
  background: #fff;
  text-align: center;
  border-radius: 5rpx;
}
.h {
  border-bottom:1rpx solid #d3d3d3;
  padding:30rpx;
}
.auth image {
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin:30rpx;
}
.a {
  margin-bottom:30rpx;
  padding:0 30rpx;
}
.c {
  font-size:24rpx;
  color:#999;
  padding: 0 30rpx;
}
.n {
  display: flex;
  margin-top:30rpx;
  border-top: 1rpx solid #d3d3d3;
}
.auth button {
  width:50%;
  color:#000;
  border-right:1rpx solid #d3d3d3;
  font-size:26rpx;
  background:#fff;
  border-radius: 0;
}
.auth button+button {
  color:#64c957;
  border-right:none;
}