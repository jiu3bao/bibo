.shadow {
  position: fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background: rgba(0,0,0,.5);
  z-index: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}
.auth {
  /* width:70%; */
  
  position: absolute;
  background: #fff;
  text-align: center;
  border-radius: 8rpx;
  padding-bottom:30rpx;
}
