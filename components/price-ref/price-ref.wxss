/* components/price-ref/price-ref.wxss */
.title {
  display: flex;
  width:100%;
  height:33rpx;
  padding-left:30rpx;
  color:#434343;
  font-size:25rpx;
  align-items: flex-end;
  margin: 24rpx 0 17rpx 0;
  box-sizing: border-box;
}
.title image {
  width:7rpx;
  height:33rpx;
  margin-right:10rpx;
}

.zx_program {
  height:76rpx;
  font-size:25rpx;
  color:#434343;
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-top:1px solid #F7F7F7;
}
.zx_program .item {
  min-width:70rpx;
  height:100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.zx_program .active {
  color:#286E87;
  border-bottom: 6rpx solid #50C397;
}
.subject_item {
  background: #fff;
  border-top:1px solid #F7F7F7;
}
.fold_item {
  height:0;
  transition: .3s;
  overflow:hidden;
}
.subject_name {
  height:75rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:25rpx;
  color:#434343;
  padding:0 83rpx 0 65rpx;
  border-bottom: 1px solid #E5E5E5;
}
.fold_btn {
  padding:20rpx;
}
.fold_btn .fold_icon {
  transform: rotate(180deg);
  transition: .3s;
}
.fold_btn image {
  width:30rpx;
  height:16rpx;
}
.subject_detail_item {
  display: flex;
  background: #F9F9F9;
  height:160rpx;
  align-items: center;
  border-bottom: 1px solid #E5E5E5;
}
.subject_detail_item .left {
  width:195rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color:#5C629E;
  font-size:25rpx;
  border-right:1px solid #E5E5E5;
  flex-shrink: 0;
}
.left image {
  width:53rpx;
  height:53rpx;
  margin-bottom:16rpx;
}
.subject_detail_item .right {
  color:#1B1B1B;
  font-size:19rpx;
  display: flex;
  width: 100%;
  position: relative;
}
.right .one,.two,.three {
  width:30%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.one text {
  color:#556FB5;
  font-size:30rpx;
  margin-bottom:15rpx;
}
.two text {
  color:#EB6877;
  font-size:30rpx;
  margin-bottom:15rpx;
}
.three text {
  color:#586CFF;
  font-size:30rpx;
  margin-bottom:15rpx;
}
.mask{
  filter: blur(3px);
  /* margin: -30px; */
}
.masktxt {
  position: absolute;
  width: 100%;
  height:47rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left:50rpx;
  font-size:25rpx;
  color:#707070;
  z-index: 2;

}
.masktxt image {
  width:123rpx;
  height:47rpx;
  margin-left:12rpx;
}