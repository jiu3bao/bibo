<!--components/class/class.wxml-->
<!--components/notice/notice.wxml-->
<view class='class-box'>
  <view class='class-item' wx:for='{{classList}}' wx:key='{{item.id}}' 
    bindtap="todetail"
    data-id='{{item.id}}'>
    <image src='{{src_url+item.pic_url}}'></image>
    <view>
      <view>{{item.title}}</view>
      <view>{{item.summary}}</view>
    </view>
    
  </view>
</view>

