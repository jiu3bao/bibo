<!--components/chose-design/chose-design.wxml-->
<view class='design'>
  <view class='zx_program'>
    <view class='"item" {{activeType ==item.name?"active":""}}' 
    wx:for='{{program_list}}'
    bindtap="checkitem"
    data-item='{{item}}'>{{item.name}}</view>
  </view>
  <scroll-view scroll-x='true' class='sub_box'>
    <view class='ss'>
      <view wx:for='{{subject_list}}'>
        <image src='{{item.pic_url}}' bindtap="openimg" data-src='{{item.pic_url}}'></image>
      </view>
    </view>
  </scroll-view>
  <!-- <view class="cover-view" wx:if='{{showbigpic}}' class='cover-view' bindtap="closeimg">
    <image src='{{imgsrc}}'></image>
  </view> -->
</view>

